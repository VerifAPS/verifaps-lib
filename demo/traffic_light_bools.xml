<code>
<plaintext>TYPE
  TrafficLight : (Red, Green);
END_TYPE

PROGRAM PedestrianTrafficLight

  VAR_INPUT
    pedBtnPress : BOOL := FALSE;
  END_VAR
  
  VAR_OUTPUT
    carLight : BOOL := TRUE;
    pedLight : BOOL := FALSE;
    counter  : INT  := 0;
  END_VAR

  VAR
    buttonPressedBefore : BOOL;
    green : BOOL := TRUE;
    red   : BOOL := FALSE;
  END_VAR

  IF (NOT buttonPressedBefore) AND pedBtnPress THEN
    carLight := red;
  END_IF

  IF counter = 10 THEN
    pedLight := green;
  ELSIF counter = 40 THEN
    pedLight := red;
  ELSIF counter = 50 THEN
    carLight := green;
  END_IF

  IF carLight = red THEN
    counter := counter + 1;
  ELSE
    counter := 0;
  END_IF
  
  buttonPressedBefore := pedBtnPress;

END_PROGRAM</plaintext>
</code>
